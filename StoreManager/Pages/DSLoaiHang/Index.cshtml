@page
@model StoreManager.Pages.DSLoaiHang.IndexModel
<div class="containerMatHang">
    <div class="row">
        <form class="form-inline mb-2 col-6 text_12" action="/action_page.php">
            <input class="form-control mr-sm-2 text_12 input_search" type="text" placeholder="Tìm kiếm loại hàng ...">
            <button class="btn btn-info text_12" type="submit"><i class="fas fa-search"></i></button>
        </form>
        <div class="col-6">
            <a type="button" class="btn btn-outline-primary mr-2 text_12" href="/loaihang/create">
                <i class="fas fa-plus mr-1"></i>Thêm Hàng Hoá
            </a>
        </div>
    </div>
    <form method="post">
        <table class="table table-sm  table-striped table-hover table-bordered text_12 table_line">
            <thead class="thead-dark text_12">
                <tr>
                    <th scope="col">Mã loại hàng</th>
                    <th scope="col">Tên loại hàng</th>
                    <th scope="col">Mô tả</th>
                    <th scope="col">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var loaiHang in Model.TypeGoods)
                    {
                        <tr>
                            <th scope="row">@{CheckBox(loaiHang.MaLH);}</th>
                            <td>@loaiHang.TenLH</td>
                            <td>@loaiHang.MoTa</td>
                            <td>@{ButtonEditDelete(loaiHang.MaLH);}</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <div class="row pagination_bottom">
            <div class="col">
                <button type="submit" class="btn btn-danger mr-2 text_12">
                    <i class="fas fa-trash-alt mr-1"></i> Xoá Danh Sách Chọn
                </button>
            </div>
            @* Pagination component *@
            <partial name="_Pagination" />
        </div>
    </form>

</div>
@{
    void CheckBox(string id)
    {
        <div class="custom-control custom-checkbox table_line">
            <input type="checkbox" class="custom-control-input" id=@id name="languages" value=@id />
            <label class="custom-control-label" for=@id>@id</label>
        </div>
    }
}

@{
    void ButtonEditDelete(string id)
    {

        <a type="button" class="btn btn-outline-success mr-2 text_12" href="/loaihang/edit/@id">
            <i class="fa fa-edit"></i>
        </a>
        <a type="button" class="btn btn-outline-primary mr-2 text_12" href="/loaihang/detail/@id">
            <i class="fas fa-info-circle"></i>
        </a>
        <a type="button" class="btn btn-outline-danger mr-2 text_12" href="/loaihang/delete/@id">
            <i class="fa fa-trash-alt"></i>
        </a>
    }
}