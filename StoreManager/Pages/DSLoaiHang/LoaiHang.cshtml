@page "/loaihang/{handler?}/{maLoaiHang?}"
@model StoreManager.Pages.DSLoaiHang.LoaiHangModel
<div style="margin: auto;" class="border border-light p-3 w-50 shadow">
    @switch (Model.CongViec)
    {
        case LoaiHangModel.Action.ChiTiet:
            template(readOnly: true, errorMessage: "Không tìm thấy cuốn sách bạn yêu cầu.");
            <a class="btn btn-info btn-block mb-2" href="/">Return</a>
            break;
        case LoaiHangModel.Action.Xoa:
            template(readOnly: true, errorMessage: "Không tìm thấy cuốn sách bạn yêu cầu.");
            if (Model.Tygoods != null)
            {
                <p class="text-danger text-center">Bạn thực sự muốn xóa cuốn sách này?</p>
                <a class="btn btn-danger btn-block mb-2" href="/book/@Model.Tygoods.MaLoaiHang?handler=deleteConfirm">Delete</a>
            }
            <a class="btn btn-info btn-block mb-2" href="/">Return</a>
            break;
        case LoaiHangModel.Action.ThemMoi:
            await form("create");
            break;
        case LoaiHangModel.Action.CapNhat:
            await form("update");
            break;
    }
</div>

@{
    void template(bool readOnly = true, string errorMessage = "")
    {
        if (Model.Tygoods == null)
        {
            <p class="h5 text-center text-danger mb-4">@errorMessage</p>
            return;
        }
        <input name="id" type="hidden" value="@Model.Tygoods.MaLoaiHang" />
        <p class="h4 text-center mb-4">@Model.Tygoods.TenLoaihang</p>
        <label for="nameHH" class="">Tên Hàng Hoá</label>
        <input name="nameHH" type="text" class="form-control mb-2" value="@Model.Tygoods.MaLoaiHang" @(readOnly ? "readonly" : "") />
        <label for="useDate" class="">Hạn sử dụng</label>
        <input name="useDate" type="text" class="form-control mb-2" value="@Model.Tygoods.TenLoaihang" @(readOnly ? "readonly" : "") />
        <label for="company" class="">Công ty sản xuất</label>
        <input name="company" type="text" class="form-control mb-2" value="@Model.Tygoods.TenLoaihang" @(readOnly ? "readonly" : "") />
        <label for="year" class="">Năm sản xuất</label>
        <input name="year" type="number" class="form-control mb-2" value="@Model.Tygoods.TenLoaihang" @(readOnly ? "readonly" : "") />
        <label for="loaiHH" class="">Loại hàng hoá</label>
        <input name="loaiHH" type="text" class="form-control mb-2" value="@Model.Tygoods.TenLoaihang" @(readOnly ? "readonly" : "") />
    }}


@{
    async Task form(string handler)
    {
        <form method="post" href="?handler=@handler">
            @{template(false); }
            <button type="submit" class="btn btn-primary btn-block mb-2">Save</button>
            <button type="reset" class="btn btn-secondary btn-block mb-2">Reset</button>
        </form>
        <a class="btn btn-info btn-block mb-2" href="/">Return</a>
    }
}
