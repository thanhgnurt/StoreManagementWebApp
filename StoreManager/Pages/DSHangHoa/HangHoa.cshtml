@page "/hanghoa/{handler?}/{maHangHoa?}"
@model StoreManager.Pages.DSHangHoa.HangHoaModel
@using StoreManager.Pages._Common

<div style="margin: auto;" class="border border-light p-3 w-50 shadow">
    @switch (Model.Job)
    {
        case Enumuration.Action.Detail:
            template(readOnly: true, errorMessage: "Không tìm thấy cuốn sách bạn yêu cầu.");
            <a class="btn btn-info btn-block mb-2" href="/">Return</a>
            break;
        case Enumuration.Action.Delete:
            template(readOnly: true, errorMessage: "Không tìm thấy cuốn sách bạn yêu cầu.");
            if (Model.Goods != null)
            {
                <p class="text-danger text-center">Bạn thực sự muốn xóa cuốn sách này?</p>
                <a class="btn btn-danger btn-block mb-2" href="/book/@Model.Goods.MaHangHoa?handler=deleteConfirm">Delete</a>
            }
            <a class="btn btn-info btn-block mb-2" href="/">Return</a>
            break;
        case Enumuration.Action.Create:
            await form("create");
            break;
        case Enumuration.Action.Update:
            await form("update");
            break;
    }
</div>

@{
    void template(bool readOnly = true, string errorMessage = "")
    {
        if (Model.Goods == null)
        {
            <p class="h5 text-center text-danger mb-4">@errorMessage</p>
            return;
        }
        <input name="id" type="hidden" value="@Model.Goods.MaHangHoa" />
        <p class="h4 text-center mb-4">@Model.Goods.TenHangHoa</p>
        <label for="TenHangHoa" class="">Tên Hàng Hoá</label>
        <input name="TenHangHoa" type="text" class="form-control mb-2" value="@Model.Goods.TenHangHoa" @(readOnly ? "readonly" : "") />
        <label for="HanSuDung" class="">Hạn sử dụng</label>
        <input name="HanSuDung" type="text" class="form-control mb-2" value="@Model.Goods.HanSuDung" @(readOnly ? "readonly" : "") />
        <label for="CtySanXuat" class="">Công ty sản xuất</label>
        <input name="CtySanXuat" type="text" class="form-control mb-2" value="@Model.Goods.CtySanXuat" @(readOnly ? "readonly" : "") />
        <label for="NamSanXuat" class="">Năm sản xuất</label>
        <input name="NamSanXuat" type="number" class="form-control mb-2" value="@Model.Goods.NamSanXuat" @(readOnly ? "readonly" : "") />

    }}


@{
    async Task form(string handler)
    {

    <form method="post" href="?handler=@handler">
        @{template(false); }
        <label for="LoaiHangHoa" class="">Loại hàng hoá</label>
        <select class="form-control mb-2" name="LoaiHangHoa" aria-label="example">
            <option selected name="LoaiHangHoa">Open this select menu</option>
            <option value="1" name="LoaiHangHoa">One</option>
            <option value="2" name="LoaiHangHoa">Two</option>
            <option value="3" name="LoaiHangHoa">Three</option>
        </select>
        <div class="d-flex flex-row-reverse mt-3">
            <button type="submit" class="btn btn-primary ml-2 mb-2">Save</button>
            <button type="reset" class="btn btn-secondary ml-2 mb-2">Reset</button>
            <a class="btn btn-info ml-2  mb-2" href="/">Return</a>
        </div>
    </form>
        
    }
}
