@page
@using StoreManager.ENTITIES
@model StoreManager.Pages.DSHangHoa.IndexModel
@{
    ViewData["Title"] = "Quản lý hàng hoá";
}

<div class="containerHangHoa">
    <div class="row">
        <form class="form-inline mb-2 col-6 text_12 form_search" action="/action_page.php">
            <input class="form-control mr-sm-2 text_12 input_search" type="text" placeholder=" Tìm kiếm hàng hoá ...">
            <button class="btn btn-info text_12" type="submit"><i class="fas fa-search"></i></button>
        </form>
        <div class="col-6">
            <a type="button" class="btn btn-primary mr-2 text_12" href="/hanghoa/1">
                <i class="fas fa-plus mr-1"></i>Thêm Hàng Hoá
            </a>
        </div>
    </div>
    <form method="post">
        <table class="table table-striped table-hover text_12">
            <thead class="thead-dark text_12">
                <tr class="row">
                    <th scope="col" class="col-1">Mã hàng hoá</th>
                    <th scope="col" class="col-3">Tên Hàng Hoá</th>
                    <th scope="col" class="col-1">Hạn Dùng</th>
                    <th scope="col" class="col-3">CTy Sản Xuất</th>
                    <th scope="col" class="col-1">Năm Sản Xuất</th>
                    <th scope="col" class="col-1">Loại Hàng</th>
                    <th scope="col" class="col-2">Chức Năng</th>
                </tr>
            </thead>

            <tbody>
                @{


                    foreach (var hangHoa in Model.dshangHoa)
                    {
                        <tr class="row">
                            <th class="col-1 border" scope="row">@{CheckBox(hangHoa.maHangHoa);}</th>
                            <td class="col-3 border">@hangHoa.tenHangHoa</td>
                            <td class="col-1 border">@{ShowDate(hangHoa.hanSuDung);}</td>
                            <td class="col-3 border">@hangHoa.ctySanXuat</td>
                            <td class="col-1 border">@hangHoa.namSanXuat</td>
                            <td class="col-1 border">@hangHoa.loaiHangHoa</td> 
                            <td class="col-2 border">@hangHoa.loaiHangHoa</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <button type="submit" class="btn btn-danger mr-2 text_12" >
            <i class="fas fa-trash-alt mr-1"></i> Xoá Danh Sách Chọn
        </button>
    </form>

</div>

@{ 
    if(Model.selectHangHoa!= null)
    {
        <h2>@Model.selectHangHoa[0] kkkkkkkkkk</h2>
    }
}

<!--CheckBox-->
@{
    void CheckBox(int id)
    {
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id=@id name="selectHangHoa" value=@id />
            <label class="custom-control-label" for=@id>@id</label>
        </div>
    }
}

<!--Show Date-->
@{
    void ShowDate(DATE date)
    {
        <text>@date.ngay/@date.thang/@date.nam</text>
    }
}