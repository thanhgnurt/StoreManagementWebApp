@page
@using StoreManager.ENTITIES
@model StoreManager.Pages.DSHangHoa.IndexModel
@{
    ViewData["Title"] = "Quản lý hàng hoá";
    ViewData["classHH"] = "classHH";
}

<div class="containerHangHoa">
    <div class="row">
        <form class="form-inline mb-2 col-6 text_12 " action="/action_page.php">
            <input class="form-control mr-sm-2 text_12 input_search" type="text" placeholder=" Tìm kiếm hàng hoá ...">
            <button class="btn btn-info text_12" type="submit"><i class="fas fa-search"></i></button>
        </form>
        <div class="col-6">
            <a type="button" class="btn btn-primary mr-2 text_12" href="/hanghoa?handler=create">
                <i class="fas fa-plus mr-1"></i>Thêm Hàng Hoá
            </a>
        </div>
    </div>
    <form method="post">
        <table class="table table-striped table-hover table-bordered text_12">
            <thead class="thead-dark text_12 ">
                <tr class="">
                    <th scope="col" class="">Mã hàng hoá</th>
                    <th scope="col" class="">Tên Hàng Hoá</th>
                    <th scope="col" class="">Hạn Dùng</th>
                    <th scope="col" class="">CTy Sản Xuất</th>
                    <th scope="col" class="">Năm Sản Xuất</th>
                    <th scope="col" class="">Loại Hàng</th>
                    <th scope="col" class="">Chức Năng</th>
                </tr>
            </thead>

            <tbody>
                @{


                    foreach (var hangHoa in Model.dshangHoa)
                    {
                        <tr class="" id="hanghoa+@hangHoa.maHangHoa">
                            <th class="" scope="row">@{CheckBox(hangHoa.maHangHoa);}</th>
                            <td class="">@hangHoa.tenHangHoa</td>
                            <td class="">@{ShowDate(hangHoa.hanSuDung);}</td>
                            <td class="">@hangHoa.ctySanXuat</td>
                            <td class="">@hangHoa.namSanXuat</td>
                            <td class="">@hangHoa.loaiHangHoa</td>
                            <td class="">@{ButtonEditDelete(hangHoa.maHangHoa);}</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <button type="submit" class="btn btn-danger mr-2 text_12">
            <i class="fas fa-trash-alt mr-1"></i> Xoá Danh Sách Chọn
        </button>
    </form>

</div>

@{
    if (Model.selectHangHoa != null)
    {
        <h2>@Model.selectHangHoa[0] kkkkkkkkkk</h2>
    }
}

<!--CheckBox-->
@{
    void CheckBox(int id)
    {
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id=@id name="selectHangHoa" value=@id />
            <label class="custom-control-label" for=@id>@id</label>
        </div>
    }
}

<!--Show Date-->
@{
    void ShowDate(DATE date)
    {
        <text>@date.ngay/@date.thang/@date.nam</text>
    }
}

@{
    void ButtonEditDelete(int id)
    {

        <a type="button" class="btn btn-warning mr-2 text_12" href="/hanghoa/@id?handler=edit">
            <i class="fa fa-edit"></i>
        </a>
        <a type="button" class="btn btn-danger mr-2 text_12" href="/hanghoa/@id?handler=delete">
            <i class="fa fa-trash-alt"></i>
        </a>
    }
}